<div class="bg-parallax parallax-overlay accounts-page"  data-jarallax='{"speed": 0.2}' style='background-image: url("#")'>
    <div class="container">
        <div class="row pb30">
            <div class="col-lg-4 col-md-6 mr-auto ml-auto col-sm-8">

                <h3 class="text-white text-center mb30">Inscris-toi !</h3>

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>

                        <div class="form-group">
                            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "PrÃ©nom" %>
                        </div>

                        <div class="form-group">
                            <%= f.text_field :surname, autofocus: true, autocomplete: "surname", class: "form-control", placeholder: "Nom" %>
                        </div>

                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                        </div>
                        <div class="form-group">
                            <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Mot de passe" %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmation du mot de passe" %>
                        </div>
                          <div class="form-group">
                              <button type="submit" href=<%= new_user_registration_path %> class="btn btn-rounded btn-primary btn-block">S'inscrire</button>
                        </div>
                        <hr>
                        <div>
                            <a href="/users/sign_in" class="btn btn-white-outline btn-block">Se connecter</a>
                        </div>

                    <% end %>

            </div> <!-- fin col-lg-4 -->
        </div> <!-- fin row -->
    </div> <!-- fin container -->
</div> <!-- fin bg-parallax -->
