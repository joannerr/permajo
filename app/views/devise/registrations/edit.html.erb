<div class="bg-parallax parallax-overlay accounts-page"  data-jarallax='{"speed": 0.2}' style='background-image: url("#")'>
    <div class="container">
        <div class="row pb30">
            <div class="col-lg-4 col-md-6 mr-auto ml-auto col-sm-8">

                <h3 class="text-white text-center mb30">Modification du profil</h3>

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= devise_error_messages! %>

                        <div class="lead text-white text-center">
                            <p><%= User.find(current_user.id).name.capitalize %></p>
                            <p><%= User.find(current_user.id).surname.capitalize %></p>
                        </div>

                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                        </div>

                        <div class="form-group">
                            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Mot de passe actuel" %>
                        </div>

                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                        <% end %>

                        <div class="form-group">
                            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Nouveau mot de passe (6 caractÃ¨res min.)" %> 
                        </div>

                        <div class="form-group">
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmation" %>
                        </div>

                        <div class="form-group">
                            <button type="submit" href=<%= edit_user_registration_path %> class="btn btn-rounded btn-primary btn-block">Enregistrer</button>
                        </div>

                        <hr>
                        <div>
                            <%= link_to "Supprimer mon compte", user_registration_path, confirm: "Are you sure?", method: :delete, class: "btn btn-white-outline btn-block" %>
                        </div>

                    <% end %>

            </div> <!-- fin col-lg-4 -->
        </div> <!-- fin row -->
    </div> <!-- fin container -->
</div> <!-- fin bg-parallax -->